version: "3.9"

services:
  mongo:
    image: mongo:latest
    container_name: mongo
    ports:
      - "27017:27017"

  redis:
    image: redis:7-alpine
    container_name: redis
    ports:
      - "6379:6379"

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: backend
    environment:
      REDIS_URL: redis://redis:6379
      MONGODB_URI: mongodb://mongo:27017/wanderlust
      PORT: 3000
    depends_on:
      - mongo
      - redis
    ports:
      - "8080:3000"

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: frontend
    environment:
      VITE_API_BASE_URL: ":8080"
    depends_on:
      - backend
    ports:
      - "5173:5173"
